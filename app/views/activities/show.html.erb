
<p>
<strong>Title:</strong>
<%= @activity.name %>
</p>

<p>
<strong>Text:</strong>
<%= @activity.category %>
</p>

<h2>Comments</h2>
<% @comments.each do |comment| %>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_with(model: [ @activity, @activity.comments.build ], local: true) do |form| %>

<p>
  <%= form.label :body %><br>
  <%= form.text_area :body %>
</p>
<p>
  <%= form.submit %>
</p>
<% end %>


<%= link_to 'Back', activities_path %>