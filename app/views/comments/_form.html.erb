<%= form_for ([@activity, @comment]) do |form| %>
<% if @comment.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@comment.errors.count, "error") %> Fix these errors to save @comment :</h2>

  <ul>
    <% @comment.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>       
    <p>
      <%= form.label :body %><br>
      <%= form.text_field :body %>
    </p>
    <p>
      <%= form.submit %>
    </p>
    <% end %>


